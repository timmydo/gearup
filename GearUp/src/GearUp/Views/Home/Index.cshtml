@{
	ViewBag.Title = "Home Page";
}


<script src="/app/app.js?v=2"></script>
<script type="text/javascript">
	(function () {

	App.ImageEndpoint = '@(ViewBag.SiteSettings.BlobEndpoint)' + '@(ViewBag.SiteSettings.ImagesContainer)';

	@if (User.Identity.IsAuthenticated)
	{
		<text>App.set('User', '@User.Identity.Name');</text>
	}
	else
	{
		<text>App.set('User', '');</text>

	}

	})();

</script>